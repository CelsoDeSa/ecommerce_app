<!DOCTYPE html>
<html>
<head>
  <title>Cell Sul Atacado</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>
  <header>
    <div class="container">
		    <div class="navbar" role="navigation">

          <%= link_to image_tag("csa.jpg", class: "navbar-header"), root_path %>

          <ul id="skype" class="nav navbar-nav">
            <li class="thumbnail">
              <h3>
                <span class="fi-social-skype" aria-hidden="true"></span>
                <small><strong>cellsulatacado@hotmail.com </strong></small>
              </h3>
              <h3>
                <span class="fi-social-facebook" aria-hidden="true"></span>
                <a href="https://www.facebook.com/diego.nk.98" target="_blank">Facebook</a>
              </h3>
              <h3>
                <span class="fi-telephone" aria-hidden="true"></span>
                047 3375 00 00
              </h3>
            </li>
          </ul>
        </div>
    </div>
  </header>

  <div class="container">
    <nav class="navbar" role="navigation">
      <div class="container">

            <ul class="nav navbar-nav">
              <li><%= link_to (raw("<strong>capinhas</strong>")), search_produtos_path(query: "capinha") %></li>
              <li><%= link_to (raw("<strong>baterias</strong>")), search_produtos_path(query: "bat") %></li>
              <li><%= link_to (raw("<strong>audio</strong>")), search_produtos_path(query: "audio") %></li>
              <li><%= link_to (raw("<strong>carregadores</strong>")), search_produtos_path(query: "carregador") %></li>
              <li><%= link_to (raw("<strong>displays</strong>")), search_produtos_path(query: "display") %></li>
              <li><%= link_to (raw("<strong>microfones</strong>")), search_produtos_path(query: "microfone") %></li>
              <li><%= link_to (raw("<strong>películas</strong>")), search_produtos_path(query: "pelicula") %></li>
              <li><%= link_to (raw("<strong>pen drives</strong>")), search_produtos_path(query: "pen drive") %></li>
              <li><%= link_to (raw("<strong>touch</strong>")), search_produtos_path(query: "touch") %></li>
              <li><%= link_to (raw("<strong>alcool isopropílico</strong>")), search_produtos_path(query: "alcool isopropilico") %></li>
              <li id="cadastro"><%= link_to (raw("<strong>Cadastre-se</strong>")),new_user_registration_path %></li>
            </ul>
      </div>
    </nav>
  </div>

  <% if notice || alert %>
    <div class="container text-center">
      <% flash.each do |name, msg| %>
        <div class="alert alert-<%=(name == 'notice' ? 'success' : 'danger')%>" role="alert">
          <button type="button" class="close" data-dismiss="alert">
            <span aria-hidden="true">&times;</span><span class="sr-only">
            Close
            </span>
          </button>
          <%= msg %>
        </div>
      <% end %>
    </div>
  <% end %>

  <div id="wrap">
    <%= yield %>
  </div>

	<div id="footer">
		<div class="container">
			<div class="row">
			<br>
				<div class="col-md-1"></div>
				<div class="col-md-4">
					<span>about</span>
				</div>
				<div class="col-md-4">
					<span>tools</span>
				</div>
				<div class="col-md-3">
					<span>privacy</span>
				</div>
			</div>
		</div>
	</div>
</body>
</html>
